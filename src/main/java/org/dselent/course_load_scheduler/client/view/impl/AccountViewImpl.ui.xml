<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HorizontalPanel width="100%" height="100%" ui:field="accountViewPanel">
		<g:VerticalPanel width="100%" height="100%">
			<g:Grid width="100%" height="79px">
				<g:row>
					<g:customCell>
						<g:Label text="Name" ui:field="nameLabel" />
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="nameTextBox" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Username" ui:field="usernameLabel" />
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="usernameTextBox" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Account State" ui:field="accountStateLabel" />
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="accountStateTextBox" />
					</g:customCell>
				</g:row>
				<g:row>
					<g:customCell>
						<g:Label text="Email" ui:field="emailLabel" />
					</g:customCell>
					<g:customCell>
						<g:TextBox ui:field="emailTextBox" />
					</g:customCell>
				</g:row>
			</g:Grid>
			<g:Button width="118px" ui:field="changePasswordButton">Change Password</g:Button>
		</g:VerticalPanel>
		<g:VerticalPanel width="100%" height="100%"
			horizontalAlignment="ALIGN_CENTER">
			<g:ScrollPanel height="111px" />
			<g:Button height="29px" ui:field="editUserButton">Edit</g:Button>
		</g:VerticalPanel>

	</g:HorizontalPanel>
</ui:UiBinder> 