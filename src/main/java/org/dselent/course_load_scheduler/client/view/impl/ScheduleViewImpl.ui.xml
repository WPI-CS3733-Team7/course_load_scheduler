<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:VerticalPanel>
		<g:HorizontalPanel spacing="15" ui:field="scheduleViewPanel">
			<g:VerticalPanel>
				<g:VerticalPanel width="391px">
					<g:HorizontalPanel width="391px">
						<g:Label text="Select Year:" ui:field="selectYear" horizontalAlignment="ALIGN_CENTER"/>
						<g:ListBox visibleItemCount="1" height="22px" ui:field="yearSelect"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel width="391px">
						<g:Label text="Select Term:" ui:field="selectTerm" horizontalAlignment="ALIGN_CENTER"/>
						<g:ListBox visibleItemCount="1" height="21px" ui:field="termSelect"/>
					</g:HorizontalPanel>
				</g:VerticalPanel>
				<g:HorizontalPanel>
					<g:VerticalPanel width="100%" height="450px">
						<g:Label text="Instructors" wordWrap="false" horizontalAlignment="ALIGN_CENTER" styleName="{style.important}" ui:field="instructorsTitle"/>
						<g:Cell width="150px" height="400px">
							<g:ScrollPanel width="" height="">
								<g:VerticalPanel width="100%" height="100%" ui:field="scheduleInstructorsPanel">
									<g:ListBox visibleItemCount="25" width="100%" height="100%" ui:field="instructorBox"/>
								</g:VerticalPanel>
							</g:ScrollPanel>
						</g:Cell>
						<g:HorizontalPanel spacing="5">

							<g:Button text="Add Instructor" ui:field="scheduleAddInstructor"/>
							<g:Button text="Edit Instructor" enabled="false" ui:field="scheduleEditInstructor"/>

						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:VerticalPanel width="100%" height="450px">
						<g:Label text="Courses" wordWrap="false" horizontalAlignment="ALIGN_CENTER" styleName="{style.important}" ui:field="coursesTitle"/>
						<g:Cell width="150px" height="400px">
							<g:ScrollPanel>
								<g:VerticalPanel width="100%" height="100%" ui:field="scheduleCoursesPanel">
									<g:ListBox visibleItemCount="25" width="100%" height="100%" ui:field="courseBox"/>
								</g:VerticalPanel>
							</g:ScrollPanel>
						</g:Cell>
						<g:HorizontalPanel spacing="5">

							<g:Button text="Add Course" ui:field="scheduleAddCourse"/>
							<g:Button text="Edit Course" enabled="false" ui:field="scheduleEditCourse"/>

						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:VerticalPanel width="278px" height="494px">
				<g:Label text="Schedule" wordWrap = "false" horizontalAlignment="ALIGN_CENTER" styleName="{style.important}" ui:field="scheduleTitle"/>
				<g:Cell width="150px" height="400px">
					<g:SimplePanel height="378px">
						<g:Grid width="100%" height="100%" ui:field="calendar"/>
					</g:SimplePanel>
				</g:Cell>
			<g:HorizontalPanel spacing="5" height="52px">
			
				<g:Button ui:field="createSection" text="Create Section" width="100%" height="41px"/>
				<g:Button ui:field="editSection" text="Edit Section" width="100%" height="41px"/>
				<g:Button ui:field="validate" text="Validate" width = "82px" height="42px"/>

			</g:HorizontalPanel>
		</g:VerticalPanel>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 