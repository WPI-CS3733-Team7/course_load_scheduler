<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:org.dselent.course_load_scheduler.client.view.impl">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:VerticalPanel width="900px" height="20%" ui:field="mainPanel">
		<g:HorizontalPanel width="100%" height="34px">
			<g:SimplePanel width="100%" height="100%"/>
			<g:SimplePanel width="100%" height="100%"/>
			<g:SimplePanel width="100%" height="100%">
				<g:Button width="70%" height="100%" ui:field="logoutButton">Logout</g:Button>
			</g:SimplePanel>
		</g:HorizontalPanel>
		<g:TabLayoutPanel barHeight="2" barUnit="EM" width="100%" height="550px">
		<g:tab>
			<g:header>Scheduler</g:header>
			<d:ScheduleViewImpl ui:field="schedulePanel"/>
		</g:tab>
		<g:tab>
				<g:header>Request</g:header>
				<g:AbsolutePanel>
					<g:at top="10" left="49">
						<g:Label text="Create a request"/>
					</g:at>
					<g:at top="36" left="10">
						<g:Label text="Request Type:"/>
					</g:at>
					<g:at top="56" left="10">
						<g:RadioButton name="new name" text="Course" ui:field="rdoCourse"/>
					</g:at>
					<g:at top="77" left="10">
						<g:RadioButton name="new name" text="Other" ui:field="rdoOther"/>
					</g:at>
					<g:at top="102" left="10">
						<g:TextArea width="148px" height="36px"/>
					</g:at>
					<g:at top="158" left="61">
						<g:Button text="Submit" ui:field="rdoSubmit"/>
					</g:at>
					<g:at top="36" left="212">
						<g:ListBox visibleItemCount="5" width="207px" height="133px"/>
					</g:at>
					<g:at top="10" left="271">
						<g:Label text="Request History"/>
					</g:at>
				</g:AbsolutePanel>
		</g:tab>
		<g:tab>
			<g:header>Account</g:header>
			<g:HorizontalPanel width="100%" height="100%">
				<g:VerticalPanel width="100%" height="100%">
					<g:Grid width="100%" height="79px">
						<g:row>
							<g:customCell>
								<g:Label text="Real Name"/>
							</g:customCell>
							<g:customCell>
								<g:TextBox/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Username"/>
							</g:customCell>
							<g:customCell>
								<g:TextBox/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Account State"/>
							</g:customCell>
							<g:customCell>
								<g:TextBox/>
							</g:customCell>
						</g:row>
						<g:row>
							<g:customCell>
								<g:Label text="Email"/>
							</g:customCell>
							<g:customCell>
								<g:TextBox/>
							</g:customCell>
						</g:row>
					</g:Grid>
					<g:Button width="118px">Change Password</g:Button>
				</g:VerticalPanel>
				<g:VerticalPanel width="100%" height="100%" horizontalAlignment="ALIGN_CENTER">
					<g:ScrollPanel height="111px"/>
					<g:Button height="29px">Edit</g:Button>
				</g:VerticalPanel>
			
			</g:HorizontalPanel>
		</g:tab>
		</g:TabLayoutPanel>
		<g:SimplePanel height="100%" width="100%"/>
		
	</g:VerticalPanel>
</ui:UiBinder>